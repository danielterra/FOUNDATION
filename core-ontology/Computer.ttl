@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foundation: <http://foundation.local/ontology/> .
@prefix qudt: <http://qudt.org/schema/qudt/> .
@prefix unit: <http://qudt.org/vocab/unit/> .

# =============================================================================
# Computer
# =============================================================================
# A programmable electronic device that processes and stores data
#
# Version: 0.1.0
# License: GNU GPL
# =============================================================================

foundation:Computer a owl:Class ;
    rdfs:subClassOf foundation:PhysicalThing ,
        [ a owl:Restriction ;
          owl:onProperty foundation:hasProcessor ;
          owl:minCardinality "1"^^xsd:nonNegativeInteger ] ,
        [ a owl:Restriction ;
          owl:onProperty foundation:hasMemory ;
          owl:minCardinality "1"^^xsd:nonNegativeInteger ] ,
        [ a owl:Restriction ;
          owl:onProperty foundation:hasStorage ;
          owl:minCardinality "1"^^xsd:nonNegativeInteger ] ,
        [ a owl:Restriction ;
          owl:onProperty foundation:hasOperatingSystem ;
          owl:cardinality "1"^^xsd:nonNegativeInteger ] ,
        [ a owl:Restriction ;
          owl:onProperty foundation:hostname ;
          owl:cardinality "1"^^xsd:nonNegativeInteger ] ;
    rdfs:label "Computer" ;
    rdfs:comment "A programmable electronic device for processing and storing data" ;
    foundation:icon "computer" ;
    rdfs:seeAlso """
Examples:
- A laptop (MacBook Pro)
- A server (AWS EC2 instance physical hardware)
- A smartphone (iPhone, Android)
- A desktop workstation
- An embedded system (Raspberry Pi)

Cardinality constraints:
- hasProcessor: at least 1 (servers may have multiple CPUs)
- hasMemory: at least 1 (may have multiple RAM modules)
- hasStorage: at least 1 (may have multiple drives)
- hasOperatingSystem: exactly 1 (only one OS running)
- hostname: exactly 1 (unique network identifier)
- hasGraphicsProcessor: 0+ (optional, may have multiple GPUs)
- hasNetworkInterface: 0+ (optional, may have multiple adapters)
""" .

# -----------------------------------------------------------------------------
# Computer Properties
# -----------------------------------------------------------------------------

foundation:hasStorage a owl:ObjectProperty ;
    rdfs:label "has storage" ;
    rdfs:comment "Storage devices that are part of or connected to this computer" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:StorageDevice ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasStorage :ssd1 .
  :server foundation:hasStorage :disk-array .
""" .

foundation:hasProcessor a owl:ObjectProperty ;
    rdfs:label "has processor" ;
    rdfs:comment "Links computer to its CPU/processor component" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:Processor ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasProcessor :m3-max-cpu .
  :server foundation:hasProcessor :xeon-cpu .
""" .

foundation:hasMemory a owl:ObjectProperty ;
    rdfs:label "has memory" ;
    rdfs:comment "Links computer to its RAM memory component" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:Memory ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasMemory :ram-16gb .
""" .

foundation:hostname a owl:DatatypeProperty ;
    rdfs:label "hostname" ;
    rdfs:comment "Network hostname of the computer" ;
    rdfs:domain foundation:Computer ;
    rdfs:range xsd:string ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hostname "daniels-macbook" .
""" .

foundation:hasOperatingSystem a owl:ObjectProperty ;
    rdfs:label "has operating system" ;
    rdfs:comment "Links computer to its operating system" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:OperatingSystem ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasOperatingSystem :macos-sequoia .
  :server foundation:hasOperatingSystem :ubuntu-2404 .
""" .

foundation:hasGraphicsProcessor a owl:ObjectProperty ;
    rdfs:label "has graphics processor" ;
    rdfs:comment "Links computer to its GPU component" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:GraphicsProcessor ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasGraphicsProcessor :m3-max-gpu .
  :workstation foundation:hasGraphicsProcessor :rtx4090 .
""" .

foundation:hasNetworkInterface a owl:ObjectProperty ;
    rdfs:label "has network interface" ;
    rdfs:comment "Network interfaces that are part of or connected to this computer" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:NetworkInterface ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasNetworkInterface :wifi-adapter .
  :server foundation:hasNetworkInterface :eth0 .
""" .

foundation:hasUser a owl:ObjectProperty ;
    rdfs:label "has user" ;
    rdfs:comment "Person who uses this computer" ;
    rdfs:domain foundation:Computer ;
    rdfs:range foundation:Person ;
    rdfs:seeAlso """
Example:
  :macbook foundation:hasUser :daniel .
""" .
