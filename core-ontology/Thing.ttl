@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foundation: <http://FOUNDATION.local/ontology/> .

# =============================================================================
# FOUNDATION Fundamental Classes
# =============================================================================
# Top-level ontological division under owl:Thing
#
# Version: 0.1.0
# License: GNU GPL
# =============================================================================

# -----------------------------------------------------------------------------
# Icon Property (visual representation for any entity)
# -----------------------------------------------------------------------------

foundation:icon a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "icon" ;
    rdfs:comment "Visual representation icon. Can be: (1) Material Symbols icon name (e.g., 'person', 'flag'), or (2) Image URI (e.g., 'file:///path/image.png', 'http://example.com/icon.svg')" ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string ;
    rdfs:seeAlso """
Examples:
- Material Symbols: foundation:icon "person"
- Local file: foundation:icon "file:///Users/daniel/icons/custom.png"
- Web URL: foundation:icon "https://example.com/logo.svg"
- Data URI: foundation:icon "data:image/svg+xml;base64,..."
""" .

# -----------------------------------------------------------------------------
# Fundamental Ontology - Top Level Division
# -----------------------------------------------------------------------------
# Note: owl:Thing is defined in rdf-rdfs-owl-core.ttl

foundation:AbstractThing a owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Abstract Thing" ;
    rdfs:comment "Things that exist as ideas, concepts, or information but have no physical form" ;
    foundation:icon "psychology" ;
    rdfs:seeAlso """
Examples:
- A concept (the idea of 'democracy')
- A document (this ontology specification)
- A process (software development)
- A quality (the color 'red')
""" .

foundation:ConcreteThing a owl:Class ;
    rdfs:subClassOf owl:Thing ;
    rdfs:label "Concrete Thing" ;
    rdfs:comment "Things that exist in physical or digital form" ;
    foundation:icon "widgets" ;
    rdfs:seeAlso """
Examples:
- A person (Daniel Terra)
- A computer (MacBook Pro)
- A file (FOUNDATION.db)
- A building (your house)
""" .

# -----------------------------------------------------------------------------
# Fundamental Properties (inherited by ALL Things)
# -----------------------------------------------------------------------------

foundation:identifier a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "identifier" ;
    rdfs:comment "Unique identifier for this entity (exactly one)" ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

foundation:name a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "name" ;
    rdfs:comment "Primary name or title (exactly one)" ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

foundation:description a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "description" ;
    rdfs:comment "Detailed explanation or documentation (exactly one)" ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:string .

foundation:createdAt a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "created at" ;
    rdfs:comment "When this entity was created (exactly one)" ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:dateTime .

foundation:modifiedAt a owl:DatatypeProperty , owl:FunctionalProperty ;
    rdfs:label "modified at" ;
    rdfs:comment "When this entity was last modified (exactly one)" ;
    rdfs:domain owl:Thing ;
    rdfs:range xsd:dateTime .

foundation:createdBy a owl:ObjectProperty , owl:FunctionalProperty ;
    rdfs:label "created by" ;
    rdfs:comment "Who or what created this entity (exactly one)" ;
    rdfs:domain owl:Thing ;
    rdfs:range foundation:AgentCapacity .
